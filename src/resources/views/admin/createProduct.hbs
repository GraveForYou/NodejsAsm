            <h3 class="text-center mb-4">Category</h3>
            <div class="tabs flex-column">
                <div class="tab-item active" value="clothes">
                    Clothes
                </div>
                <div class="tab-item" value="shoes">
                    Shoes
                </div>

                <div class="tab-item" value="bag">
                    Bag
                </div>
                <div class="tab-item" value="watches">
                    Watches
                </div>
                <div class="line"></div>
            </div>

        </div>
        {{!Header }}
        <div class="col-9">
            <div class="mb-4">
                <h3>Tạo sản phẩm</h3>
            </div>
            <form action="/admin/create" method="POST" enctype="multipart/form-data">
