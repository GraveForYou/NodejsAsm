<div class="body-content">

    <div class="container d-flex mt-5">

        {{!Header form}}
        <div class="col-3 pt-100">
            <!-- Tab items -->
            <h3 class="text-center mb-4">Category</h3>
            <div class="tabs flex-column">
                <div class="tab-item active" value="clothes">
                    Clothes
                </div>
                <div class="tab-item" value="shoes">
                    Shoes
                </div>

                <div class="tab-item" value="bag">
                    Bag
                </div>
                <div class="tab-item" value="watches">
                    Watches
                </div>
                <div class="line"></div>
            </div>

        </div>
        {{!Header }}
        <div class="col-9">

            <div class="mb-4">
                <h3>Chỉnh sửa sản phẩm</h3>
            </div>
            <form method="POST" action="/admin/{{product._id}}?_method=PUT" enctype="multipart/form-data">
                {{!category}}
                <div class="form-group d-none">
                    <label for="category">Category</label>
                    <input type="text" class="form-control" id="category" placeholder="category" name="category" value="{{product.category}}" />
                    <input type="checkbox" class="genderCategory" name="category" value="Male">
                    <input type="checkbox" class="genderCategory" name="category" value="Female">
                </div>
                {{!Name}}
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="name" name="name"
                        value="{{product.name}}" />
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="text" class="form-control" id="price" placeholder="price" name="price"
                        value="{{product.price}}" />
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea type="text" class="form-control" id="description" placeholder="description"
                        name="description">{{product.description}}</textarea>
                </div>

                <div class="form-group">
                    <div for="">Gender</div>
                    {{#each genders}}
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="gender" value="{{this}}"
                            checked="checked" />
                        <label class="form-check-label">{{this}}</label>
                    </div>
                    {{/each}}
                    {{#each nonGenders}}
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="color" value="{{this}}" />
                        <label class="form-check-label">{{this}}</label>
                    </div>
                    {{/each}}
                </div>
                <div class="tab-content">
                    <div class="tab-pane active">
                        <div class="form-group">
                            <div for="">Size clothes</div>
                            {{#each sizeClothes}}
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="sizeclothes" value="{{this}}"
                                    checked="checked" />
                                <label class="form-check-label">{{this}}</label>
                            </div>
                            {{/each}}
                            {{#each nonSizeClothes}}
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="sizeclothes" value="{{this}}" />
                                <label class="form-check-label">{{this}}</label>
                            </div>
                            {{/each}}

                        </div>
                    </div>

                    <div class="tab-pane">
                        <div class="form-group">
                            <div for="">Size shoes</div>
                            {{#each sizeShoes}}
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="sizeshoes" value="{{this}}"
                                    checked="checked" />
                                <label class="form-check-label">{{this}}</label>
                            </div>
                            {{/each}}
                            {{#each nonSizeShoes}}
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="sizeshoes" value="{{this}}" />
                                <label class="form-check-label">{{this}}</label>
                            </div>
                            {{/each}}

                        </div>
                    </div>
                    <div class="tab-pane">
                        <div class="form-group">
                            <div for="">Size bag</div>
                            {{#each sizeBag}}
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="sizebag" value="{{this}}"
                                    checked="checked" />
                                <label class="form-check-label">{{this}}</label>
                            </div>
                            {{/each}}
                            {{#each nonSizeBag}}
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="sizebag" value="{{this}}" />
                                <label class="form-check-label">{{this}}</label>
                            </div>
                            {{/each}}

                        </div>
                    </div>
                    <div class="tab-pane">
                        <div class="form-group">
                            <div for="">Size watches</div>
                            {{#each sizeWatches}}
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="sizewatches" value="{{this}}"
                                    checked="checked" />
                                <label class="form-check-label">{{this}}</label>
                            </div>
                            {{/each}}
                            {{#each nonSizeWatches}}
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="sizewatches" value="{{this}}" />
                                <label class="form-check-label">{{this}}</label>
                            </div>
                            {{/each}}

                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div for="" class=>Color</div>
                    <div>{{product.color}}</div>
                    {{#each colors}}
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="color" value="{{this}}"
                            checked="checked" />
                        <label class="form-check-label">{{this}}</label>
                    </div>
                    {{/each}}
                    {{#each noncolors}}
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="color" value="{{this}}" />
                        <label class="form-check-label">{{this}}</label>
                    </div>
                    {{/each}}

                </div>

                <div class="form-group">
                    <label for="">file Image</label>
                    <input type="file" class="form-control-file" id="image" name="imageu" value="{{product.image}}" />
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

    </div>

